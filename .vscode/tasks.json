{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "dotnet",
    "isShellCommand": true,
    "args": [],
    "tasks": [
        {
            "taskName": "build",
            "args": ["app/app.csproj"],
            "isBuildCommand": true,
            "showOutput": "always",
            "problemMatcher": "$msCompile"
        },
        {
            "taskName": "test",
            "args": ["tests/tests.csproj"],
            "isTestCommand": false,
            "showOutput": "always",
            "problemMatcher": "$msCompile"
        }        
    ]
}